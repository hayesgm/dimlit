{
  "name": "dimlit",
  "version": "1.0.0",
  "main": "dist/dimlit.js",
  "license": "MIT",
  "dependencies": {
    "aframe": "^1.3.0"
  },
  "devDependencies": {
    "@types/aframe": "^1.2.0",
    "@types/jsdom": "^16.2.14",
    "esbuild": "^0.14.24",
    "jsdom": "^19.0.0",
    "three": "^0.138.2",
    "typescript": "^4.5.5",
    "xmlhttprequest": "^1.8.0"
  },
  "scripts": {
    "dev": "cp -rp public/* dist && esbuild src/index.tsx --bundle --sourcemap --servedir=dist --outfile=dist/dimlit.js",
    "build": "cp -rp public/* dist && esbuild src/index.tsx --bundle --minify --sourcemap --outfile=dist/dimlit.js",
    "deploy": "aws s3 sync --exclude .DS_Store dist s3://dimlit.space",
    "types": "esbuild src/getComponents.ts --bundle --outfile=dist/getComponents.js && node ./generateTypes.js"
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true,
    "printWidth": 150
  }
}
